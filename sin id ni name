<!-- HTML -->
<button>Hola</button>

<!-- JavaScript -->
<script>
    // Seleccionar el primer botón en el documento
    var boton = document.querySelector('button');

    // Agregar un evento al botón
    boton.addEventListener('click', function() {
        alert('¡Hola!');
    });
</script>



//funcion flecha
    let happy = document.querySelector('button')
    .addEventListener('click',  () => alert("hola mundo") )
